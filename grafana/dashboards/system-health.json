        "x": 6,
        "y": 53
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 50000
              },
              {
                "color": "red",
                "value": 90000
              }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "node_filefd_allocated",
          "legendFormat": "",
