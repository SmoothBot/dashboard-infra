          "instant": true
        }
      ]
    },
    {
      "title": "Total Entropy",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 53
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 200
              },
              {
                "color": "green",
                "value": 1000
              }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "node_entropy_available_bits",
          "legendFormat": "",
          "refId": "A",
          "instant": true
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
