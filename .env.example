# =============================================================================
# Infrastructure Stack Configuration
# Copy to .env and edit before running setup.sh
# =============================================================================

# --- PostgreSQL / TimescaleDB ---
PG_DB_NAME=analytics
PG_DB_USER=analytics_svc
PG_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
PG_PORT=5432

# --- Grafana ---
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
GRAFANA_PORT=3000

# --- Prometheus ---
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=30d

# --- Node Exporter ---
NODE_EXPORTER_PORT=9100

# --- SSH ---
SSH_PORT=22

# --- System ---
# Set to the install prefix (scripts reference this for stable paths)
INFRA_DIR=/opt/infra
