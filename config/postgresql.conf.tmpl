# --- Connection ---
listen_addresses = 'localhost'
port = ${PG_PORT}
max_connections = 100
unix_socket_directories = '/var/run/postgresql'

# --- Memory ---
shared_buffers = ${PG_SHARED_BUFFERS}
effective_cache_size = ${PG_EFFECTIVE_CACHE_SIZE}
work_mem = ${PG_WORK_MEM}
maintenance_work_mem = ${PG_MAINTENANCE_WORK_MEM}
huge_pages = try

# --- WAL ---
wal_buffers = ${PG_WAL_BUFFERS}
wal_level = replica
max_wal_size = 2GB
min_wal_size = 512MB
checkpoint_completion_target = 0.9

# --- Query Planner ---
random_page_cost = 1.1
effective_io_concurrency = 200
default_statistics_target = 100

# --- Logging ---
logging_collector = on
log_directory = 'log'
log_filename = 'postgresql-%Y-%m-%d.log'
log_rotation_age = 1d
log_rotation_size = 100MB
log_min_duration_statement = 1000
log_checkpoints = on
log_connections = on
log_disconnections = on
log_lock_waits = on
log_temp_files = 0
log_timezone = 'UTC'

# --- Locale ---
datestyle = 'iso, mdy'
timezone = 'UTC'
lc_messages = 'en_US.UTF-8'
lc_monetary = 'en_US.UTF-8'
lc_numeric = 'en_US.UTF-8'
lc_time = 'en_US.UTF-8'
default_text_search_config = 'pg_catalog.english'

# --- Data ---
data_directory = '/var/lib/postgresql/${PG_MAJOR}/main'
hba_file = '/etc/postgresql/${PG_MAJOR}/main/pg_hba.conf'
ident_file = '/etc/postgresql/${PG_MAJOR}/main/pg_ident.conf'
external_pid_file = '/var/run/postgresql/${PG_MAJOR}-main.pid'

# --- Stats ---
track_activities = on
track_counts = on
track_io_timing = on
track_functions = all

# --- TimescaleDB ---
shared_preload_libraries = 'timescaledb'
timescaledb.telemetry_level = off

# --- Autovacuum ---
autovacuum = on
autovacuum_max_workers = 3
autovacuum_naptime = 60
